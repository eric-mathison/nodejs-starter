{
  "name": "nodejs-starter",
  "version": "1.0.0",
  "description": "Starter framework for NodeJS Apps",
  "main": "dist/index.js",
  "author": "Eric Mathison <eric@mathisonmedia.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "node dist/server.js",
    "babel": "babel src -d dist --ignore .min.js",
    "copy": "cpx \"src/public/js/**/*.min.js\" \"dist/public/js\" && cpx \"src/views/*\" \"dist/views\" && cpx \"src/*.json\" \"dist\" && cpx \"src/public/images/*\" \"dist/public/images\"",
    "lint": "eslint src test",
    "test": "mocha"
  },
  "repository": "git@github.com:eric-mathison/nodejs-starter.git",
  "dependencies": {
    "winston": "^2.4.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "cpx": "^1.5.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-mocha": "^5.1.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.0",
    "mocha": "^5.2.0",
    "prettier": "^1.14.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && lint-staged",
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
      "*.{js,json,css,md}": ["prettier --write", "git add"]
  }
}
